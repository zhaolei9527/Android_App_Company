<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x9"
    android:paddingRight="@dimen/x9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_conllect"
            android:layout_width="@dimen/x75"
            android:layout_height="@dimen/y75"
            android:layout_centerVertical="true"
            fresco:placeholderImage="@drawable/imgloading" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/x11"
            android:layout_toRightOf="@id/img_conllect"
            android:singleLine="true"
            android:textColor="#333"
            android:textSize="@dimen/x14" />

        <TextView
            android:id="@+id/tv_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/x5"
            android:layout_toRightOf="@id/img_conllect"
            android:singleLine="true"
            android:textColor="#666"
            android:textSize="@dimen/x11" />

        <TextView
            android:id="@+id/tv_Company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_model"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/x5"
            android:layout_toRightOf="@id/img_conllect"
            android:singleLine="true"
            android:textColor="#666"
            android:textSize="@dimen/x11" />

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_Company"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/x9"
            android:layout_toRightOf="@id/img_conllect"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="ï¿¥"
                android:textColor="#FFA919"
                android:textSize="@dimen/x15" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#FFA919"
                android:textSize="@dimen/x17" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/x55"
            android:layout_height="@dimen/y25"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/x5"
            android:background="@drawable/delete_bg"
            android:text="@string/delete"
            android:textColor="#666" />

    </RelativeLayout>

    <View
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>

</LinearLayout>
