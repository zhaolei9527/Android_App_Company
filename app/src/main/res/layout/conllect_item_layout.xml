<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/y11"
    android:paddingLeft="@dimen/y9"
    android:paddingRight="@dimen/y9"
    android:paddingTop="@dimen/y11">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_conllect"
            android:layout_width="@dimen/y75"
            android:layout_height="@dimen/y75"
            android:layout_centerVertical="true"
            fresco:placeholderImage="@drawable/imgloading" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/y11"
            android:layout_toRightOf="@id/img_conllect"
            android:singleLine="true"
            android:text="安防监控系统安防监控系统安防监控系统"
            android:textColor="#333"
            android:textSize="@dimen/x14" />

        <TextView
            android:id="@+id/tv_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/y11"
            android:layout_toRightOf="@id/img_conllect"
            android:singleLine="true"
            android:text="型号：sakura"
            android:textColor="#666"
            android:textSize="@dimen/x14" />

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_model"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/y10"
            android:layout_toRightOf="@id/img_conllect"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#FFA919"
                android:textSize="@dimen/x15" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="666"
                android:textColor="#FFA919"
                android:textSize="@dimen/x20" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/x55"
            android:layout_height="@dimen/y25"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/x10"
            android:background="@drawable/delete_bg"
            android:text="删除" />

    </RelativeLayout>


</LinearLayout>
