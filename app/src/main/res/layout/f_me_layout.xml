<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y38"
        android:background="@color/text_blue"
        android:gravity="center"
        android:paddingLeft="@dimen/x10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_headbg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y162"
        android:background="@mipmap/mybg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y21"
            android:background="@mipmap/r3_c8" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y9"
            android:textColor="#fff"
            android:textSize="@dimen/x16" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y9"
            android:textColor="#CDCDCD"
            android:textSize="@dimen/x16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y7"
        android:background="#E7E7E7"></View>

    <ExpandableListView
        android:id="@+id/expandablelistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d4d4d4"></View>

    <RelativeLayout
        android:id="@+id/rl_consult"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="@dimen/y20"
            android:layout_height="@dimen/y20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:background="@mipmap/r5_c2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@id/img2"
            android:text="@string/myconsult"
            android:textColor="#666"
            android:textSize="@dimen/x12" />


        <ImageView
            android:layout_width="@dimen/y20"
            android:layout_height="@dimen/y16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x5"
            android:src="@mipmap/r5_c8" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d4d4d4"></View>

    <RelativeLayout
        android:id="@+id/rl_change_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img3"
            android:layout_width="@dimen/y18"
            android:layout_height="@dimen/y20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:background="@mipmap/r7_c4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x12"
            android:layout_toRightOf="@id/img3"
            android:text="@string/changepassword"
            android:textColor="#666"
            android:textSize="@dimen/x12" />


        <ImageView
            android:layout_width="@dimen/y20"
            android:layout_height="@dimen/y16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x5"
            android:src="@mipmap/r5_c8" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y7"
        android:background="#E7E7E7"></View>

    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img4"
            android:layout_width="@dimen/y20"
            android:layout_height="@dimen/y20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:background="@mipmap/r9_c3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@id/img4"
            android:text="@string/setting"
            android:textColor="#666"
            android:textSize="@dimen/x12" />


        <ImageView
            android:layout_width="@dimen/y20"
            android:layout_height="@dimen/y16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x5"
            android:src="@mipmap/r5_c8" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d4d4d4"></View>
</LinearLayout>