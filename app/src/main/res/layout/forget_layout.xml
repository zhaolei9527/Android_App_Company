<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbg">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/y80"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@mipmap/d_logo" />


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="@dimen/x264"
        android:layout_height="@dimen/y33"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y28"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="@dimen/x20">

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="@dimen/x21"
            android:layout_height="@dimen/y20"
            android:layout_centerVertical="true"
            android:background="@mipmap/z_mail" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y33"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x16"
            android:layout_toRightOf="@id/img_email"
            android:background="@null"
            android:hint="@string/email"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="#50f0f0f0" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y34"
        android:layout_below="@id/rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y12"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/x185"
            android:layout_height="@dimen/y34"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="@dimen/x20">

            <ImageView
                android:id="@+id/img_captcha"
                android:layout_width="@dimen/x21"
                android:layout_height="@dimen/y20"
                android:layout_centerVertical="true"
                android:background="@mipmap/w_yanzhengma" />

            <EditText
                android:id="@+id/et_captcha"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y33"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/x16"
                android:layout_toRightOf="@id/img_captcha"
                android:background="@null"
                android:hint="@string/captcha"
                android:maxLength="6"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="#50f0f0f0" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_get"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/y28"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/btn_captcha"
            android:text="@string/get"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="@dimen/x264"
        android:layout_height="@dimen/y33"
        android:layout_below="@id/ll_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y12"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="@dimen/x20">

        <ImageView
            android:id="@+id/img_password"
            android:layout_width="@dimen/x21"
            android:layout_height="@dimen/y20"
            android:layout_centerVertical="true"
            android:background="@mipmap/d_mima" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y33"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x16"
            android:layout_toRightOf="@id/img_password"
            android:background="@null"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="#50f0f0f0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="@dimen/x264"
        android:layout_height="@dimen/y33"
        android:layout_below="@id/rl3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y12"
        android:background="@drawable/rounded_edittext"
        android:paddingLeft="@dimen/x20">

        <ImageView
            android:id="@+id/img_password_again"
            android:layout_width="@dimen/x21"
            android:layout_height="@dimen/y20"
            android:layout_centerVertical="true"
            android:background="@mipmap/d_mima" />

        <EditText
            android:id="@+id/et_password_again"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y33"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x16"
            android:layout_toRightOf="@id/img_password_again"
            android:background="@null"
            android:hint="@string/passwordagain"
            android:inputType="textPassword"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="#50f0f0f0" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="@dimen/x170"
        android:layout_height="@dimen/y30"
        android:layout_below="@id/rl4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/btn_login"
        android:text="@string/ok"
        android:textColor="#fff" />


</RelativeLayout>
