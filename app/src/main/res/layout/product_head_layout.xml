<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.yulian.platform.View.MyGridView
            android:id="@+id/gv_swipe_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:divider="@null"
            android:gravity="center"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:fastScrollEnabled="false"
            android:paddingTop="@dimen/x10"
            android:scrollbars="none" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y7"
            android:background="#e7e7e7"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y34"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/y21"
                android:layout_height="@dimen/y21"
                android:src="@mipmap/chanpin_r7_c5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:text="@string/Jarrow"
                android:textColor="#333"
                android:textSize="@dimen/x15" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
