<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:background="@color/text_blue"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/y20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x13"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/productdetails"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/SimpleDraweeView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y130"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/white"
                fresco:placeholderImage="@drawable/imgloading" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginTop="@dimen/x10"
                    android:textColor="@color/text_gray"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/y10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/model"
                        android:textColor="#666"
                        android:textSize="@dimen/x13" />

                    <TextView
                        android:id="@+id/tv_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="#666"
                        android:textSize="@dimen/x13" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_title"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/y10">

                    <TextView
                        android:id="@+id/rmb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffa919"
                        android:textSize="@dimen/x25"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffa919"
                        android:textSize="@dimen/x25"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_showmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_title"
                    android:layout_marginRight="@dimen/x10">

                    <TextView
                        android:id="@+id/tv_showmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Lookprice"
                        android:textColor="#ffa919"
                        android:textSize="@dimen/x15"
                        android:textStyle="bold" />
                </LinearLayout>


            </RelativeLayout>

            <com.tencent.smtt.sdk.WebView
                android:id="@+id/forum_context"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/y10" />

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y39"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_call_phone"
            android:layout_width="@dimen/x135"
            android:layout_height="@dimen/y39"
            android:background="@color/text_blue">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:background="@mipmap/callphone" />

            <TextView
                android:id="@id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginTop="@dimen/x5"
                android:layout_toRightOf="@id/img"
                android:text="@string/consult"
                android:textColor="@android:color/white"
                android:textSize="@dimen/x15" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv"
                android:layout_marginLeft="@dimen/x5"
                android:layout_toRightOf="@id/img"
                android:singleLine="true"
                android:text="110119120"
                android:textColor="@android:color/white"
                android:textSize="@dimen/x13" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_download"
            android:layout_width="@dimen/x135"
            android:layout_height="@dimen/y39"
            android:layout_marginLeft="1px"
            android:background="#ffce7d">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:background="@mipmap/dowmload" />

            <TextView
                android:id="@+id/tv_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x7"
                android:layout_toRightOf="@id/img2"
                android:text="@string/TOEFL"
                android:textColor="@android:color/white"
                android:textSize="@dimen/x15" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_collect"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y39"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_collect"
                android:layout_width="@dimen/y20"
                android:layout_height="@dimen/y20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shoucang_check_bg"
                android:button="@null"
                android:checked="false"
                android:clickable="false" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
